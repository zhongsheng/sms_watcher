<section class="bg-gray-100 h-screen">
    <div class="container px-4 py-20 mx-auto">
        <a
            href="/"
            title="Kutty Home Page"
            class="flex items-center justify-start sm:justify-center"
        >
            <%= heroicon 'chat-alt', class: 'text-blue-300 block h-8 w-auto' %>
            <h1 class='text-2xl ml-1'>SMS Watcher</h1>
        </a>
        <div
            class="w-full px-0 pt-5 pb-6 mx-auto mt-4 mb-0 space-y-4 bg-transparent border-0 border-gray-200 rounded-lg md:bg-white md:border sm:w-10/12 md:w-8/12 lg:w-6/12 xl:w-4/12 md:px-6 sm:mt-8 sm:mb-5"
        >
            <h1
                class="mb-5 text-xl font-light text-left text-gray-800 sm:text-center"
            >
                Log in to your account
            </h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: 'pb-1 space-y-4') do |f| %>
                <div class="field mb-3">
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true,class: 'block w-full', autocomplete: "email" %>
                </div>

                <div class="field mb-3">
                    <%= f.label :password %><br />
                    <%= f.password_field :password, class: 'block w-full', autocomplete: "current-password" %>
                </div>

                <div class="block md:flex items-center justify-between">
                    <% if devise_mapping.rememberable? %>
                        <div class="w-full mb-3 md:mb-0">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                        </div>
                    <% end %>

                    <%= f.submit "Log in", class: 'w-full font-bold text-gray-700 hover:text-white hover:shadow bg-blue-300 border-blue-300 hover:bg-blue-500' %>
                </div>
            <% end %>
        </div>

    </div>
</section>


